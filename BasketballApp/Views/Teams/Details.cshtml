@model BasketballDataModel.TeamModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TeamModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NationalRank)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NationalRank)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeasonWins)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeasonWins)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeasonLoss)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeasonLoss)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
      
    </dl>
</div>
<H2>Coaches</H2>
<table class="table">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Coaches[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coaches[0].Name)
        </th>


    </tr>
</thead>
<tbody>
    @foreach (var item in Model.Coaches)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

        </tr>
    }
</tbody>
</table>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].NationalRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Position.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Name)
            </th>

            <th></th>
        </tr>
    </thead>
    <H2>Players</H2>
    <tbody>
        @foreach (var item in Model.Players)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NationalRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
